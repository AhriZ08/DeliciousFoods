/* 导航 */
.navbar{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 40px;
	padding: 0 5px;
	background: #fff;
	box-shadow: 0 1px 5px rgba(0,0,0,.06);
	position: relative;
	z-index: 10;
}
.nav-item{
	
	-webkit-box-flex: 1;
	
	-webkit-flex: 1;
	
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	height: 100%;
	font-size: 15px;
	color:#3F536E;
	position: relative;
}
.current{
	color:#EB511B;
}
.current after{
		content: '';
		position: absolute;
		left: 50%;
		bottom: 0;
		-webkit-transform: translateX(-50%);
		        transform: translateX(-50%);
		width: 44px;
		height: 0;
		border-bottom: 2px solid #EB511B;
}
